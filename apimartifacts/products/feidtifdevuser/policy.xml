<!--
    - Policies are applied in the order they appear.
    - Position <base/> inside a section to inherit policies from the outer scope.
    - Comments within policies are not preserved.
-->
<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->
<policies>
	<!-- Throttle, authorize, validate, cache, or transform the requests -->
	<inbound>
		<base />
		<set-variable name="policyname" value="validateoauthtoken" />
		<set-variable name="starttime" value="@(DateTime.UtcNow)" />
		<validate-jwt header-name="Authorization" failed-validation-httpcode="401">
			<openid-config url="https://login.microsoftonline.com/21c9315b-cdc8-41c8-b30d-d4da2c5a804b/v2.0/.well-known/openid-configuration" />
			<audiences>
				<audience>api://feidtif-services</audience>
			</audiences>
			<issuers>
				<issuer>https://sts.windows.net/21c9315b-cdc8-41c8-b30d-d4da2c5a804b/</issuer>
			</issuers>
			<required-claims>
				<claim name="aud" match="all">
					<value>api://feidtif-services</value>
				</claim>
			</required-claims>
		</validate-jwt>
		<include-fragment fragment-id="policytiming" />
	</inbound>
	<!-- Control if and how the requests are forwarded to services  -->
	<backend>
		<base />
	</backend>
	<!-- Customize the responses -->
	<outbound>
		<base />
	</outbound>
	<!-- Handle exceptions and customize error responses  -->
	<on-error>
		<!-- <base /> -->
		<trace source="errorfromjwtvalidationpolicy" severity="error">
			<message>@("oauth2-token-received: " + context.Request.Headers.GetValueOrDefault("Authorization","None"))</message>
		</trace>
	</on-error>
</policies>